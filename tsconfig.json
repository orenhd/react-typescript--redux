{
    "compilerOptions": {
        "lib": ["dom", "es5", "es2015"],
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}